// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "icon_theme": "Material Icon Theme",
  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_assistant": false
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "assistant": {
    "enable_experimental_live_diffs": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "theme": {
    "mode": "system",
    "light": "Zed Legacy: Solarized Light",
    "dark": "Dracula Mini"
  },
  "project_panel": {
    "default_width": 300,
    "scrollbar": {
      "show": "never"
    },
    "auto_reveal_entries": false,
    "entry_spacing": "standard"
  },
  "scrollbar": {
    "show": "never"
  },
  "cursor_blink": false,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.ruby-lsp"
  ],
  "wrap_guides": [120],
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "buffer_font_family": "CodeNewRoman Nerd Font",
  "buffer_line_height": {
    "custom": 1.3
  },
  "load_direnv": "shell_hook",

  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150
    }
  },
  "completions": {
    "words": "enabled"
  },

  "pane_split_direction_horizontal": "down",
  "pane_split_direction_vertical": "right",

  // Terminal
  "terminal": {
    "font_family": "CodeNewRoman Nerd Font",
    "copy_on_select": false,
    "line_height": "standard",
    "toolbar": {
      "breadcrumbs": false
    }
  },

  // VIM
  "relative_line_numbers": true,
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_multiline_find": true,
    "use_smartcase_find": true
  },

  // Editor
  "format_on_save": "off",
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "diagnostics": false
      }
    },
    "helm-ls": {},
    "rubocop": {
      "initialization_options": {
        "safeAutocorrect": false
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "erb": "html",
          "slim": "html",
          "ruby": "html"
        },
        "experimental": {
          "classRegex": ["\\bclass:\\s*['\"]([^'\"]*)['\"]"]
        }
      }
    }
  },
  "languages": {
    "Ruby": {
      "language_servers": [
        "ruby-lsp",
        "rubocop",
        "tailwindcss-language-server",
        "!solargraph"
      ]
    },
    "HTML": {
      "tab_size": 2
    },
    "ERB": {
      "tab_size": 2
    },
    "Slim": {
      "tab_size": 2,
      "language_servers": ["tailwindcss-language-server"]
    }
  },
  "file_types": {
    "Ruby": ["rbs", "Dangerfile"],
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ]
  },
  "auto_install_extension": {
    "material-icon-theme": true,
    "html": true,
    "ruby": true,
    "terraform": true,
    "scss": true,
    "lua": true,
    "swift": true,
    "slim": true,
    "sql": true,
    "toml": true,
    "fish": true
  }
}
